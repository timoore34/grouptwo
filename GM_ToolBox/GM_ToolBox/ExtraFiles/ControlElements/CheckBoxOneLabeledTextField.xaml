<UserControl x:Class="GM_ToolBox.ExtraFiles.ControlElements.CheckBoxOneLabeledTextField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GM_ToolBox.ExtraFiles.ControlElements">
    <StackPanel Orientation="Horizontal">
        <Viewbox x:Name="CheckSize"
                 Margin="5 5 10 5">
            <CheckBox x:Name="EnableCheckBox"
                      VerticalContentAlignment="Center"/>
        </Viewbox>
        <Label x:Name="TextFieldLabel"
               Margin="5"/>
        <TextBox x:Name="TextField"
                 Margin="0 5 5 5"
                 Width="50"/>
    </StackPanel>
</UserControl>
