<UserControl x:Class="GM_Toolbox.ControlElements.NameTextEntryCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GM_Toolbox.ControlElements">
    <StackPanel Orientation="Horizontal">
        <StackPanel.Resources>
            <Style TargetType="TextBox">
                <Setter Property="Margin" Value=".5 5"/>
                <Setter Property="Width" Value="50"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="Margin" Value=".5 5"/>
            </Style>
        </StackPanel.Resources>
        <Viewbox x:Name="CheckSize"
                 Margin="5 5 10 5">
            <CheckBox x:Name="EnableCheckBox"
                      VerticalContentAlignment="Center"/>
        </Viewbox>
        <Label x:Name="FirstLabel"/>
        <TextBox x:Name="FirstTextBox"/>
        <Label x:Name="SecondLabel"/>
        <TextBox x:Name="SecondTextBox"/>
        <Label x:Name="ThirdLabel"/>
        <TextBox x:Name="ThirdTextBox"/>
    </StackPanel>
</UserControl>
