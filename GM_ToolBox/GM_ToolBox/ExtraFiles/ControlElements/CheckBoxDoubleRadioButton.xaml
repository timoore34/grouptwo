<UserControl x:Class="GM_ToolBox.ExtraFiles.ControlElements.CheckBoxDoubleRadioButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GM_ToolBox.ExtraFiles.ControlElements">
    <StackPanel Orientation="Horizontal">
        <Viewbox x:Name="CheckSize"
                 Margin="5 5 10 5">
            <CheckBox x:Name="EnableCheckBox"
                      VerticalContentAlignment="Center"/>
        </Viewbox>
        <RadioButton x:Name="RadioButtonOne"
                     GroupName="OneOrOther" 
                     VerticalAlignment="Center"
                     Margin="5"/>
        <RadioButton x:Name="RadioButtonTwo"
                     GroupName="OneOrOther" 
                     VerticalAlignment="Center"
                     Margin="0 5 5 5"/>
    </StackPanel>
</UserControl>
